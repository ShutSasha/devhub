<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_comment_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/shape_oval"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:layout_marginVertical="5dp"
        android:src="@drawable/ic_pfp" />

    <EditText
        android:id="@+id/comment_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium_font"
        android:hint="Enter your comment..."
        android:inputType="text"
        android:paddingVertical="12dp"
        android:textColor="@color/black300"
        android:textColorHint="@color/black300"
        android:textSize="16sp" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_primary_button_background"
        android:gravity="center"
        android:text="Post"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
