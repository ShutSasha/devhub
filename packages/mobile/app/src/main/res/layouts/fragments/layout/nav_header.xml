<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/shape_background_main">

    <ImageView
        android:id="@+id/nav_user_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_oval"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/nav_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_devhub_logo"
        app:layout_constraintStart_toEndOf="@id/nav_user_avatar"
        app:layout_constraintTop_toTopOf="@id/nav_user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/nav_user_avatar" />

    <ImageView
        android:id="@+id/nav_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nav_user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/nav_user_avatar" />
</androidx.constraintlayout.widget.ConstraintLayout>