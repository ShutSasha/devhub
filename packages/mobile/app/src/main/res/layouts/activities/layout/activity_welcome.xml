<LinearLayout
    android:id="@+id/welcome_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <ImageView
        android:layout_height="39dp"
        android:layout_width="169dp"
        android:src="@drawable/ic_devhub_logo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/welcome"
        android:textSize="32sp"
        android:textColor="@color/textOnDark"
        android:fontFamily="@font/montserrat_semibold_font"
        android:layout_marginTop="62dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:src="@drawable/people_brainstorming_idea" />

        <FrameLayout
            android:id="@+id/create_an_account_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="83dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_height="41dp"
            android:layout_width="match_parent"
            android:layout_marginTop="9dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_input_background"
            android:text="@string/log_in"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold_font"/>

    </LinearLayout>

</LinearLayout>
