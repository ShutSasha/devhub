<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/registration_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background_gradient"
    android:elevation="8dp"
    android:translationZ="4dp"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="@string/devhub_logo"
        android:src="@drawable/ic_devhub_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_auth_container_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center_vertical">

        <FrameLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"/>

        <FrameLayout
            android:id="@+id/usernameInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/usernameErrorTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold_font"
            android:textColor="@color/wrong" />

        <FrameLayout
            android:id="@+id/emailInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/emailErrorTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold_font"
            android:textColor="@color/wrong" />

        <FrameLayout
            android:id="@+id/passwordInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/passwordErrorTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold_font"
            android:textColor="@color/wrong" />

        <FrameLayout
            android:id="@+id/repeatPasswordInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/repeatPasswordErrorTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold_font"
            android:textColor="@color/wrong" />

        <FrameLayout
            android:id="@+id/registrationErrorTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold_font"
            android:textColor="@color/wrong" />

        <FrameLayout
            android:id="@+id/primaryButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/lineContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/textAndLinkTextContainer"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</FrameLayout>